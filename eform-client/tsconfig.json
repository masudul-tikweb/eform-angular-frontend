{
  "compilerOptions": {
    "baseUrl": "./",
    "forceConsistentCasingInFileNames": false,
    "strict": false,
    "module": "ES2022",
    "outDir": "./dist/out-src",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "*": [ "./*" ],
      "src/*": ["./src/*"]
    },
    "types": [
      "node",
      "webdriverio/async",
      "@wdio/globals/types",
      "@wdio/mocha-framework",
      "cypress"
    ],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "./src/**/*.ts",
    "./cypress/**/*.ts",
  ]
}
